{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "pc": false,
        "GIGA_INPUT_EVENTS": true
    },
    "rules": {
        // Based on .eslintrc @ http://cgit.drupalcode.org/drupal/tree/core/.eslintrc?h=8.1.x
        // ESLint rules here : http://eslint.org/docs/rules/
        // Errors.
        "array-bracket-spacing": [2, "never"],
        "block-scoped-var": 2,
        // PJH 7/5/16 - "brace-style": [2, "allman", {"allowSingleLine": true}],
        "camelcase": 2,
        "comma-dangle": [2, "never"],
        "comma-spacing": 2,
        "comma-style": [2, "last"],
        "computed-property-spacing": [2, "never"],
        "consistent-return": 2,
        "curly": [2, "all"],
        "dot-notation": [2, { "allowKeywords": true }],
        "eol-last": 2,
        "eqeqeq": 2,
        "guard-for-in": 2,
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
        // "linebreak-style": ["error","windows"],
        "lines-around-comment": [2, {"beforeBlockComment": true, "afterBlockComment": false, "allowObjectStart": true}],
        "new-cap": 2,
        "new-parens": 2,
        "no-alert": 2,
        "no-array-constructor": 2,
        "no-caller": 2,
        "no-catch-shadow": 2,
        "no-console": 0,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-parens": [2, "functions"],
        "no-implied-eval": 2,
        "no-iterator": 2,
        "no-label-var": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-nested-ternary": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-object": 2,
        "no-new-wrappers": 2,
        "no-octal-escape": 2,
        "no-process-exit": 2,
        "no-proto": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-shadow-restricted-names": 2,
        "no-spaced-func": 2,
        // Too pedantic - "no-trailing-spaces": 2,
        "no-undef-init": 2,
        // PJH 09/05/16 "no-underscore-dangle": 2,
        "no-underscore-dangle": ["error", { "allowAfterThis": true }],
        "no-unused-expressions": 2,
        "no-unused-vars": ["error", { "varsIgnorePattern": "^GIGA_" }],
        "no-use-before-define": 2,
        "no-with": 2,
        // "object-curly-spacing": [2, "never"],
        "one-var": [2, "never"],
        "quote-props": [2, "consistent-as-needed"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "semi-spacing": [2, {"before": false, "after": true}],
        "space-before-blocks": [2, "always"],
        "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
        // too paranoid, don't like no-space style "space-in-parens": [2, "never"],
        "space-infix-ops": 2,
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        "spaced-comment": [2, "always"],
        "strict": [2, "global"],
        "yoda": [2, "never"]
    },
    // Warnings.
    "max-nested-callbacks": [1, 3],
    "valid-jsdoc": [1, {
        "prefer": {
            "returns": "return",
            "property": "prop"
        },
        "requireReturn": false
    }]
}